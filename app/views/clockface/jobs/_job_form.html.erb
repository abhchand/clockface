<div class="jobs-new__form-container">
  <%= form_for(Clockface::ClockworkScheduledJob.new, url: jobs_path, html: { class: "form-horizontal" }) do |form| %>
    <div class="jobs-new__form-element--name form-group">
      <label class="control-label col-sm-2" for="name">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("name") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.select(
            "clockface_clockwork_event_id",
            Clockface::ClockworkEvent.all.collect { |e| [ e.name, e.id ] },
            { include_blank: false },
            { class: "form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-new__form-element--enabled form-group">
      <label class="control-label col-sm-2" for="enabled">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("enabled") %>
      </label>
      <div class="col-sm-10">
        <%= form.check_box :enabled, checked: true %>
      </div>
    </div>

    <div class="jobs-new__form-element--period form-group">
      <label class="control-label col-sm-2" for="period">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("period") %>
      </label>
      <div class="col-sm-10">
        <%= form.text_field(:period_value, size: 2, class: "jobs-new__form-element--period-value form-control") %>
        <%=
          form.select(
            :period_units,
            Clockface::ClockworkScheduledJob::PERIOD_UNITS.map { |unit| [ t("datetime.units.#{unit}"), unit ] },
            { include_blank: false },
            { class: "jobs-new__form-element--period-units form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-new__form-element--at form-group">
      <label class="control-label col-sm-2" for="at">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("at") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.select(
            :day_of_week,
            t("date.day_names").each_with_index { |day, i| [ day, i ] },
            { include_blank: true },
            { class: "jobs-new__form-element--day-of-week form-control" }
          )
        %>
        <%=
          form.select(
            :hour,
            (0..23).to_a.map { |h| [ h.to_s.rjust(2, "0"), h ] },
            { include_blank: false },
            { class: "jobs-new__form-element--hour form-control" }
          )
        %>
        <%=
          form.select(
            :minute,
            (0..59).to_a.map { |m| [ m.to_s.rjust(2, "0"), m ] },
            { include_blank: false },
            { class: "jobs-new__form-element--minute form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-new__form-element--timezone form-group">
      <label class="control-label col-sm-2" for="timezone">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("timezone") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.time_zone_select(
            :timezone,
            nil,
            { include_blank: false, default: default_timezone },
            { class: "form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-new__form-element--if_condition form-group">
      <label class="control-label col-sm-2" for="if_condition">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("if_condition") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.select(
            :if_condition,
            Clockface::ClockworkScheduledJob::IF_CONDITIONS.keys.map do |if_condition|
              [
                Clockface::ClockworkScheduledJob.human_attribute_name("if_condition.#{if_condition}"),
                if_condition
              ]
            end,
            { include_blank: true },
            { class: "form-control" }
          )
        %>
      </div>
    </div>

    <div class="form-group">
      <div class="jobs-new__form-submit col-sm-2">
        <%= form.submit(t(".submit"), class: "btn btn-success") %>
      </div>
    </div>
  <% end %>
</div>
