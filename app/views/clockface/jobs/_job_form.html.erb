<div class="jobs-new__form-container">
  <%= form_for(job, url: form_url, html: { class: "form-horizontal" }) do |form| %>
    <div class="jobs-form__form-element--name form-group">
      <label class="control-label col-sm-2" for="name">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("name") %>
      </label>
      <div class="col-sm-10">
        <% if allow_editing_task %>
        <%=
          form.select(
            :clockface_task_id,
            job_form_select_options_for_name,
            { include_blank: false },
            { class: "form-control" }
          )
        %>
        <% else %>
          <%= job.name %>
        <% end %>
      </div>
    </div>

    <div class="jobs-form__form-element--enabled form-group">
      <label class="control-label col-sm-2" for="enabled">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("enabled") %>
      </label>
      <div class="col-sm-10">
        <%= form.check_box :enabled, checked: job.persisted? ? job.enabled? : true %>
      </div>
    </div>

    <div class="jobs-form__form-element--period form-group">
      <label class="control-label col-sm-2" for="period">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("period") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.text_field(
            :period_value,
            size: 2,
            class: "jobs-form__form-element--period-value form-control"
          ) %>
        <%=
          form.select(
            :period_units,
            job_form_select_options_for_period_units,
            { include_blank: false },
            { class: "jobs-form__form-element--period-units form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-form__form-element--at form-group">
      <label class="control-label col-sm-2" for="at">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("at") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.select(
            :day_of_week,
            job_form_select_options_for_day_of_week,
            { include_blank: true },
            { class: "jobs-form__form-element--day-of-week form-control" }
          )
        %>
        &nbsp;
        &nbsp;
        <%=
          form.select(
            :hour,
            job_form_select_options_for_hour,
            { include_blank: false },
            { class: "jobs-form__form-element--hour form-control" }
          )
        %>
        <b>:</b>
        <%=
          form.select(
            :minute,
            job_form_select_options_for_minute,
            { include_blank: false },
            { class: "jobs-form__form-element--minute form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-form__form-element--time_zone form-group">
      <label class="control-label col-sm-2" for="time_zone">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("time_zone") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.time_zone_select(
            :time_zone,
            nil,
            { include_blank: false, default: clockface_time_zone },
            { class: "form-control" }
          )
        %>
      </div>
    </div>

    <div class="jobs-form__form-element--if_condition form-group">
      <label class="control-label col-sm-2" for="if_condition">
        <%= Clockface::ClockworkScheduledJob.human_attribute_name("if_condition") %>
      </label>
      <div class="col-sm-10">
        <%=
          form.select(
            :if_condition,
            job_form_select_options_for_if_condition,
            { include_blank: true },
            { class: "form-control" }
          )
        %>
      </div>
    </div>

    <div class="form-group">
      <div class="jobs-new__form-submit col-sm-2">
        <%= link_to clockface.jobs_path do %>
          <button type="button" class="btn btn-default"><%= t(".cancel") %></button>
        <% end %>
        <%= form.submit(t(".submit"), class: "btn btn-success") %>
      </div>
    </div>
  <% end %>
</div>
